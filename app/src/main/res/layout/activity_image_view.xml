<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userInterface.activity.ImageViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="user name" />

            <TextView
                android:id="@+id/user_name_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="test user name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="Name" />

            <TextView
                android:id="@+id/name_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="test name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/portfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="Portfolio Link" />

            <TextView
                android:id="@+id/portfolioLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="test portfolioLink" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="Portfolio Link" />

            <TextView
                android:id="@+id/instagramLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="#52575C"
                android:fontFamily="@font/pingfang_sc_regular"
                tools:text="test portfolioLink" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>